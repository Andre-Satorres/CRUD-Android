<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="168dp"
        android:text="Consultar Alunos" />

    <Button
        android:id="@+id/btnConsultarRA"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="168dp"
        android:text="Consultar Alunos por RA" />

    <Button
        android:id="@+id/btnConsultarPorNome"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="168dp"
        android:text="CONSULTAR ALUNOS POR NOME" />

    <Button
        android:id="@+id/btnInserir"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="168dp"
        android:text="Inserir Aluno" />

    <Button
        android:id="@+id/btnAlterar"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="168dp"
        android:text="Alterar Aluno" />

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="168dp"
        android:text="Excluir Aluno" />

    <ListView
        android:id="@+id/lista_tudo"
        android:layout_width="373dp"
        android:layout_height="320dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="408dp"
        android:layout_marginBottom="0dp"
        android:clipChildren="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tvAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="385dp"
        android:fontFamily="monospace"
        android:text="Alunos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>